{
    "manifest_version": 3,
    "name": "Ruffle",
    "version": null,
    "default_locale": "en",
    "description": "__MSG_description__",
    "homepage_url": "https://ruffle.rs/",

    "action": {
        "default_popup": "popup.html",
        "browser_style": true
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["dist/content.js"],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "content_security_policy": {
        "extension_pages": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline';"
    },
    "declarative_net_request": {
        "rule_resources": [{
            "id": "swf",
            "enabled": true,
            "path": "rules.json"
        }]
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "declarativeNetRequest",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "sandbox": {
        "pages": ["sandbox.html"]
    },
    "web_accessible_resources": [
        {
            "resources": ["*"],
            "matches": ["<all_urls>"]
        }
    ]
}
